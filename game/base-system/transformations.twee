			<br><br>
		<</if>>
	<<case 6>>
		<<if $angelbuild lt 50>>
			<span class="gold">날개가 희미해져간다.</span>
			<<set $angel to 5>>
			<<set $transformationParts.angel.wings to "disabled">>
			<br><br>
		<</if>>
<</switch>>

<<switch $demon>>
	<<case 0>>
		<<if $demonbuild gte 5 and $transformdisabledivine is "f" and $specialTransform isnot 1>>
