			<br><br>
		<<elseif $cowbuild lt 15>>
			<<set $cow to 2>>
			<span class="gold">귀가 더는 따끔거리지 않는다.</span>
			<br><br>
		<</if>>
	<<case 4>>
		<<if $cowbuild gte 25 and $transformdisable is "f">>
			<<set $cow to 5>>
